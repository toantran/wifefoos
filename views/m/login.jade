div(data-role='page', data-theme='b', data-title='WFL - Login')
  div(data-role='header', data-theme='b')
    h1 WFL - Log in
  div(data-role='content')
    != partial('../messages')
    form(action='/m/authenticate', method='post', data-ajax="false")  
      div(data-role='fieldcontain')
        label.ui-hidden-accessible(for='username') Email
        input#username(type='text', name='username', placeholder='Email', value='#{username}')
        label.ui-hidden-accessible(for='password') Password
        input#password(type='password', name='password', placeholder='Password', value='#{password}')
        input(type='submit', value='Log in')
