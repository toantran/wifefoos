- if ((typeof profile !== 'undefined') && (typeof user !== 'undefined') && (profile._id == user._id))
  - if (typeof profile.team == 'undefined' || !profile.team || !profile.team._id)
    .todo-noteam.alert.alert-info
      a.close(data-dismiss='alert') x
      h4.alert-heading You don't have a team yet
      .btn-group
        button#createteambtn.btn.btn-mini.btn-primary(data-profileid='#{user._id}', data-toggle='modal', data-target='#todo-noteam-create') Create
        button#jointeambtn.btn.btn-mini.btn-primary(profileid='#{user._id}', data-toggle='modal', data-target='#todo-noteam-join') &nbsp;Find&nbsp;
    #todo-noteam-create.modal.hide(width='320px')
      .modal-header
        a.close(data-dismiss='modal') x
        h3 Create your own team
      .modal-body
        .row
          .span2.teamcreate-logo
            img(src='../../images/teamcreate.jpg')
          .span4.teamcreate-formpanel
            form#form-teamcreate(method='POST', action='/team/#{user._id}')
              fieldset
                label(for='form-teamcreate-username') Your awesome team name
                input#form-teamcreate-teamname(name='teamname', size='40', type='text', required, placeholder='Team name')
      .modal-footer
        a.btn.pull-right(data-toggle='modal', data-target='#todo-noteam-create') Cancel
        a.btn.btn-primary.pull-right(data-toggle='modal', data-target='#todo-noteam-create', data-profileid='#{user._id}') Create
    #todo-noteam-join.modal.hide
      .modal-header Available teams
        a.close(data-dismiss='modal') x
        h3 Available teams
      .modal-body
        .teamlist
  - else
    - if (profile.team.joinrequests && profile.team.joinrequests.length)
      .todo-noteam
        .todo-noteam-text Somebody wants to join your team!!!
        .buttons
          button#gototeambtn(width=100, teamid='#{profile.team._id}') See your team
  script(type='text/javascript', src='/js/todoteam.js')
