!!!
html
  head
    title #{title || 'W.I.F.E'}
    //link(rel='stylesheet', href='/javascripts/ext/resources/css/ext-all.css')    
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
    script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js')    
  body
    .masterpage
      .masterpage-header
        .masterpage-header-title 
          a(href='/') W . I . F . E
        .masterpage-header-subtitle Wheels IT Foosball Event
        - if (typeof request.session.user !== "undefined")
          - var nickname = request.session.user.nickname || request.session.user.username
          .masterpage-header-user Welcome,&nbsp; 
            a(href='/account/profile')= nickname
          .masterpage-header-menu
            .menu-item.menu-item-last
              a(href='/logout') Logout
            .separator              
            .menu-item
              a(href='/schedule') Schedule
            .separator              
            .menu-item
              a(href='/standing') Standing
            .separator              
            .menu-item
              a(href='/team') Teams
            .separator              
            .menu-item.menu-item-first
              a(href='/player') Players
        - else 
          .masterpage-header-user &nbsp;
          .masterpage-header-menu
            .menu-item
              a(href='/account/login') Login   
            .separator         
            .menu-item
              a(href='/account/signup') Sign Up
        .clear-float
      .masterpage-body
        != body
        .clear-float
    .page-footer
