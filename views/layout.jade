!!!
html
  head
    title #{title || 'W.I.F.E'}
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/jquery-ui-1.8.17.custom.css')
    script(type='text/javascript', src='/javascripts/jquery/jquery-1.7.1.min.js')
    script(type='text/javascript', src='/javascripts/jquery/jquery-ui-1.8.17.custom.min.js')
  body
    .masterpage
      .masterpage-header
        .masterpage-header-title 
          a(href='/') W F L
        .masterpage-header-subtitle Wheels Foosball League
        - if (typeof request.session.user !== "undefined")
          - var nickname = request.session.user.nickname || request.session.user.username
          .masterpage-header-user Welcome,&nbsp; 
            a(href='/account/profile')= nickname
          .masterpage-header-menu
            .menu-item.menu-item-last
              a(href='/logout') Logout
            //.separator              
            //.menu-item
            //  a(href='/schedule') Schedule
            //.separator              
            //.menu-item
            //  a(href='/standing') Standing
            .separator              
            .menu-item
              a(href='/team') Teams
            .separator              
            .menu-item
              a(href='/player') Players
            .separator              
            .menu-item.menu-item-first
              a(href='/rules') Rules
        - else 
          .masterpage-header-user &nbsp;
          .masterpage-header-menu
            .menu-item
              a(href='/account/login') Login   
            .separator         
            .menu-item
              a(href='/account/add') Sign Up
            .separator              
            .menu-item.menu-item-first
              a(href='/rules') Rules
        .clear-float
      .masterpage-body
        != body
        .clear-float
    .page-footer
