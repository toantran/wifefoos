.player-info
  .player-detail.picture
    - if (player.pictureurl)
      img(src='#{player.pictureurl || '/images/player.jpg'}')
  .player-detail.info
    .nickname
      a(href='/profile/#{player._id}')= player.nickname || player.username
    - if ((typeof player.team !== 'undefined') && player.team && player.team.teamname)
      .team Team:
        a(href='/team/#{player.team._id}')= player.team.teamname
    - else 
      .team Team: None
  .player-detail.stats
    .stats-detail #{(player.stats ? player.stats.win : 0) || '0'}-#{(player.stats ? player.stats.loss : 0) || '0'}
    //.buttons
    //  input(type='button', value='Challenge!')      
  .clear-float
